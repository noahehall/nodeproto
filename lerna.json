{
  "version": "independent",
  "npmClient": "npm",
  "command": {
    "publish": {
      "ignoreChanges": ["*.md"],
      "message": "chore(release): publish",
      "registry": "https://npm.pkg.github.com"
    },
    "bootstrap": {
      "ignore": ["components-starting-with-this-*"],
      "npmClientArgs": ["--no-package-lock", "--save-exact"],
      "scope": []
    }
  },
  "packages": [
    "packages/*"
  ]
}
