{
  "manifest_version": 2,
  "name": "@nodeproto/bodyguard",
  "description": "manage UI application network requests with @nodeproto/bodyguard firefox & chromium (chrome, edge, opera) browser extension",
  "version": "0.0.0",
  "default_locale": "en",
  "background": {
    "scripts": [
      "background/contextMenu.js",
      "background/network.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "48": "icons/icons8-muscle-48.png"
    },
    "default_popup": "browserAction/browserAction.html",
    "default_title": "@nodeproto/bodyguard",
    "browser_style": true,
    "chrome_style": true,
    "default_area": "navbar"
  },
  "options_ui": {
    "page": "optionsUi/optionsUi.html",
    "browser_style": true,
    "chrome_style": true,
    "open_in_tab": true
  },
  "page_action": {
    "default_icon": {
      "48": "icons/icons8-muscle-48.png"
    },
    "default_popup": "pageAction/pageAction.html",
    "default_title": "@nodeproto/bodyguard",
    "browser_style": true,
    "chrome_style": true,
    "show_matches": ["<all_urls>"]
  },
  "sidebar_action": {
    "default_icon": {
      "48": "icons/icons8-muscle-48.png"
    },
    "default_title" : "@nodeproto/bodyguard",
    "default_panel": "sidebarAction/sidebarAction.html",
    "open_at_install": true,
    "browser_style": true,
    "chrome_style": true
  },
  "icons": {
    "48": "icons/icons8-muscle-48.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "noahedwardhall@gmail.com",
      "strict_min_version": "90.0"
    },
    "edge": {
      "browser_action_next_to_addressbar": true
    },
    "safari": {
      "strict_min_version": "13"
    }
  },
  "commands": {
    "_execute_sidebar_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      }
    }
  },
  "permissions": [
    "activeTab",
    "http://*/*",
    "https://*/*",
    "menus",
    "storage",
    "tabs",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",

    "<all_urls>"
  ]
}
